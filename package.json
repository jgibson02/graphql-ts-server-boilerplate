{
  "name": "graphql-ts-server-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/ioredis": "^4.0.3",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.11.7",
    "@types/node-fetch": "^2.1.2",
    "@types/uuid": "^3.4.4",
    "@types/yup": "^0.26.0",
    "gql2ts": "^1.10.1",
    "jest": "^23.6.0",
    "nodemon": "^1.18.4",
    "ts-jest": "^23.10.4",
    "ts-node": "7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "graphql-request": "^1.8.2",
    "graphql-tools": "^4.0.1",
    "graphql-yoga": "^1.16.2",
    "ioredis": "^4.0.2",
    "node-fetch": "^2.2.0",
    "pg": "^7.5.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.7",
    "uuid": "^3.3.2",
    "yup": "^0.26.6"
  },
  "scripts": {
    "start": "SET NODE_ENV=development && nodemon --exec ts-node src/index.ts",
    "test": "SET NODE_ENV=test && jest --forceExit --detectOpenHandles",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
  },
  "jest": {
    "globalSetup": "./src/test-setup/callSetup.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
